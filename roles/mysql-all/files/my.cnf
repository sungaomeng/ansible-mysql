[mysql]
prompt								=\\u@\\h \\D \\R:\\m:\\s [\\d]>
[client]
port								= 3306
socket								= /tmp/mysql.sock
default-character-set				= utf8
[mysqld]
character-set-server				= utf8
user        						= mysql
port								= 3306
socket								= /tmp/mysql.sock
basedir 							= /opt/mysql56
datadir 							= /opt/mysql56/var

#---------------+
#systemconfig   |
#---------------+
skip-name-resolve
skip-external-locking
open_files_limit    				= 65535
back_log 							= 600
max_connections 					= 4000
event_scheduler						= 1
max_connect_errors 					= 6000
max_allowed_packet 					= 1024M
default-storage-engine 				= InnoDB
external-locking 					= FALSE
transaction_isolation 				= READ-COMMITTED
explicit_defaults_for_timestamp 	= 1

#---------------+
#   myisam      |
#---------------+
myisam_sort_buffer_size				= 64M
myisam_max_sort_file_size 			=1G
myisam_repair_threads 				= 1
myisam_recover
key_buffer_size 					= 256M

#---------------+
#      cache    |
#---------------+
thread_cache_size 					= 512
tmp_table_size 						= 32M
max_heap_table_size 				= 32M
table_open_cache					= 614
ft_min_word_len 					= 4
bulk_insert_buffer_size 			= 64M
sort_buffer_size 					= 12M
read_buffer_size 					= 24M
read_rnd_buffer_size 				= 12M
join_buffer_size 					= 12M
table_definition_cache 				= 4096

#---------------+
#     log       |
#---------------+
log-bin								= mysql-bin
relay-log 							= relay-log
relay_log_index 					= relay-log.index
slow_query_log 						= 1
long_query_time 					= 1
log_queries_not_using_indexes 		= 1
slow-query-log-file					= /opt/mysql56/var/slowquery.log
log-bin 							= /opt/mysql56/var/binlog
log-error							= /opt/mysql56/var/logerr
binlog_cache_size 					= 32M
binlog_format 						= ROW
max_binlog_cache_size 				= 512M
max_binlog_size 					= 512M
expire_logs_days 					= 5
relay_log 							= /opt/mysql56/var/mysql-relay-bin

#---------------+
#   innodb      |
#---------------+
innodb_flush_method   				= O_DIRECT
innodb_io_capacity 					= 1500
max_heap_table_size 				= 96M
innodb_open_files 					= 500
innodb_additional_mem_pool_size 	= 16M
innodb_buffer_pool_size 			= 2048M
innodb_data_file_path 				= ibdata1:1024M:autoextend
innodb_additional_mem_pool_size 	= 20M
innodb_file_io_threads 				= 4
innodb_thread_concurrency 			= 64
innodb_flush_log_at_trx_commit 		= 2
innodb_log_buffer_size 				= 16M
innodb_log_file_size 				= 1024M
innodb_log_files_in_group 			= 3
innodb_max_dirty_pages_pct 			= 85
innodb_lock_wait_timeout 			= 30
innodb_file_per_table 				= 1 
innodb_write_io_threads 			= 8
innodb_read_io_threads 				= 8

#-------------+
#thread poll  |
#-------------+
#thread_handling 					= pool-of-threads
#thread_pool_oversubscribe 			= 10

#---------------+
# replication   |
#---------------+
read-only   						= 0
sync-binlog  						= 1
sync-relay-log                		= 1
sync-relay-log-info           		= 1
sync-master-info               		= 1
slave_compressed_protocol 			= 1
slave_net_timeout					= 120
server-id = 11  #master-server_id
#auto-increment-increment			= 2
#auto-increment-offset 				= 1
master_info_repository				= TABLE
relay_log_info_repository 			= TABLE
relay-log-purge     				= 1
#replicate-wild-ignore-table			= test.%  
#replicate-wild-ignore-table			= mysql.%  #指定不需要同步的db
#replicate_wild_do_table			= roobo.%  #指定需要同步的db
#slave-skip-errors   				= all
log-slave-updates

#---------------+
#       other   |
#---------------+
[mysqldump]
quick
max_allowed_packet 						= 1024M
[xtrabackup]
compress
parallel							    =16
compress-threads						=16
rebuild-threads							=16

